<div class="panel panel-default">
  <div class="panel-heading">Лог системы</div>
  <div class="panel-body">
    <p>
      Записей на странцие: <%= @performed_actions.count %>; записи: <%= @performed_actions.current_page_record_range %>
    </p>
  </div>
  <table class="table">
    <thead>
    <tr>
      <th scope="row">id пользователя</th>
      <th>Роль</th>
      <th>Дейстие</th>
      <th>Сущность</th>
      <th>Дата и время</th>
    </tr>
    </thead>
    <tbody>
    <% @performed_actions.each do |action| %>
        <tr>
          <td>
            <%= action[:actor_id] %>
          </td>
          <td>
            <%= action[:actor_type] %>
          </td>
          <td>
            <%= action[:action] %>
          </td>
          <td>
            <%= action[:subject_type] %>
          </td>
          <td>
            <%= action[:created_at] %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<nav aria-label="Page navigation">
  <ul class="pager">

    <% unless @performed_actions.first_page? %>
        <li>
          <a href="/events">
          <span aria-hidden="true">&laquo;</span>
          </a>
        </li>

        <% unless @performed_actions.current_page-1 == 1 %>
            <li>
              <a href="/events?page=<%= @performed_actions.prev_page %>" aria-label="Previous">
                <span aria-hidden="true">&larr;</span>
              </a>
            </li>
        <% end %>

    <% end %>

    <li><a href="#"><%= @performed_actions.current_page %></a></li>

    <% unless @performed_actions.last_page? || @performed_actions.page_count-1 == @performed_actions.current_page %>
        <li>
          <a href="/events?page=<%= @performed_actions.next_page %>" aria-label="Next">
            <span aria-hidden="true">&rarr;</span>
          </a>
        </li>
    <% end %>

    <% unless @performed_actions.next_page.nil? %>
        <li>
          <a href="/events?page=<%= @performed_actions.page_count %>">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
    <% end %>
  </ul>
</nav>
